<%= render "devise/shared/error_messages", resource: resource %>
<div id="main" class="main">
  <div class="container mt-3">
    <h1><a href="/">Planetary Quantification</a></h1>
    <h4>Online Tool</h4>
    <hr></hr>
    <h6>Sign Up</h6>
    <hr></hr>
  </div>
  <div class="container formgroup single mt-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Email</span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
      </div>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Password</span>
        </div>
        <% if @minimum_password_length %>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "#{@minimum_password_length} characters minimum" %>
        <% else %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
        <% end %>
      </div>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Password<sup>2</sup></span>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Please, confirm your password" %>
      </div>
      <div class="secondary-nav-controls">
        <div class="secondary-nav-controls--btn">
          <%= f.submit "Sign Up", class: "actions btn btn-primary" %>
        </div>
      </div>
  </div>
  <div class="container mt-4">
    <hr></hr>
    <h6>or</h6>
    <hr></hr>
  </div>
  <div class="container site-mapping mt-2">
    <h6><%= render "devise/shared/links" %></h6>
  </div>
<% end %>
</div>
