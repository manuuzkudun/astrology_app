<%= render "devise/shared/error_messages", resource: resource %>
  <div class="container">
    <hr></hr>
    <h6>Password Recovery</h6>
    <hr></hr>
  </div>
  <div class="container formgroup single mt-4">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text"><%= :email.capitalize %></span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: t("global.navigation.email") %>
      </div>
      <div class="secondary-nav-controls">
        <div class="secondary-nav-controls--btn">
          <%= f.submit t("global.navigation.send_instructions_btn"), class: "actions btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="container mt-4">
    <hr></hr>
    <h6>or</h6>
    <hr></hr>
  </div>
  <div class="container site-mapping mt-2">
    <h6><%= link_to "Go Back", :back %></h6>
  </div>
