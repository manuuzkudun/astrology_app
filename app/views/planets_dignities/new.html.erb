<div class="container mt-5">
<h2>Astrology API <small>Planetary Quantification Online Tool</small></h2>
<hr></hr>
<h6>Please enter your Natal Information</h6>
<hr></hr>
<div class="formgroup primary">

    <%= form_tag("/planets_dignities/", :method => "get") do %>
      <div class="formgroup">
        <input id="latitude" name="latitude" type="text" class="form-control mb-2" placeholder="Latitude (i.e: 41.390205)">
      </div>
      <div class="formgroup">
        <input id="longitude" name="longitude" type="text" class="form-control mb-2" placeholder="Longitude (i.e: 2.154007)">
      </div>
      <div class="formgroup">
        <input id="year" name="year" type="text" class="form-control mb-2" placeholder="Year (i.e: 2002)">
      </div>
      <div class="formgroup">
        <input id="month" name="month" type="text" class="form-control mb-2" placeholder="Month (i.e: 3 for March)">
      </div>
      <div class="formgroup">
        <input id="day" name="day" type="text" class="form-control mb-2" placeholder="Day (i.e: 23)">
      </div>
      <div class="formgroup">
        <input id="hour" name="hour" type="text" class="form-control mb-2" placeholder="Hour (i.e: 04:24 or 15:30)">
      </div>
      <input id="btn-submit" type="submit" name="commit" data-disable-with="Submit" value="Get Results" class="btn btn-primary submit-btn">
    <% end %>

